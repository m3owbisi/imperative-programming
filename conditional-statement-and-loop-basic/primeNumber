#include <stdio.h>
#include <conio.h>

int main() 
{
    int number,I,count=0;
    clrscr();
    printf("Enter a positive integer: ");
    scanf("%d", &number);

    if (number == 1) 
   {
        printf("1 is neither prime nor composite.\n");
    } 
    for (i = 2; i <= number / 2; i++) 
    {
        if (number % i == 0) 
        {
             if(number%i ==0)
		count++;
        }
        if (count == 0)  
       {
            printf("%d is a prime number.\n", number);
        }
        else  
       {
            printf("%d is not a prime number.\n", number);
        }
    }
    getch():
    return 0;
}
