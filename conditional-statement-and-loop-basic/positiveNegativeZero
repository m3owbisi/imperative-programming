#include <stdio.h>
#include <conio.h>

void main() {
    int number;
    clrscr();
    printf("Enter an integer: ");
    scanf("%d", &number);

    if (number > 0) {
        printf("%d is a positive number.\n", number);
    } else if (number < 0) {
        printf("%d is a negative number.\n", number);
    } else {
        printf("%d is zero.\n", number);
    }
    getch();
    return 0;
}
